{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-jsx",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ]
}